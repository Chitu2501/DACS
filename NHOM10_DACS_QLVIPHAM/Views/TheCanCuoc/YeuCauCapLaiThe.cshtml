@model NHOM10_DACS_QLVIPHAM.ViewModels.YeuCauCapLaiTheViewModel
@{
    ViewData["Title"] = "Yêu cầu cấp lại thẻ căn cước";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="max-w-xl mx-auto py-10">
    <div class="bg-white shadow-xl rounded-2xl p-8">
        <h2 class="text-2xl font-bold text-blue-700 mb-6">Yêu cầu cấp lại thẻ căn cước</h2>
        <form asp-action="YeuCauCapLaiThe" method="post">
            <div class="mb-4">
                <label asp-for="LyDo" class="block text-gray-700 font-medium mb-1"></label>
                <input asp-for="LyDo" class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="LyDo" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="GhiChu" class="block text-gray-700 font-medium mb-1"></label>
                <textarea asp-for="GhiChu" class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            </div>
            <div class="mb-6">
                <label class="block text-gray-700 font-medium mb-1">Hình thức nhận thẻ</label>
                <div class="flex items-center space-x-6">
                    <label class="inline-flex items-center">
                        <input type="radio" asp-for="HinhThucNhan" value="TuDenLay" class="form-radio text-blue-600" checked />
                        <span class="ml-2">Tự đến lấy tại cơ quan</span>
                    </label>
                    <label class="inline-flex items-center">
                        <input type="radio" asp-for="HinhThucNhan" value="GuiBuuDien" class="form-radio text-blue-600" />
                        <span class="ml-2">Gửi qua bưu điện</span>
                    </label>
                </div>
                <span asp-validation-for="HinhThucNhan" class="text-red-500 text-sm"></span>
            </div>
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition">Gửi yêu cầu</button>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 