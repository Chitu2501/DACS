                           class="inline-flex items-center px-4 py-2 bg-blue-50 text-blue-700 border border-blue-200 rounded-lg hover:bg-blue-100 transition">
                            <i class="fas fa-address-card mr-2"></i> Xem chi tiết thẻ
                        </a>
                        <a asp-action="ChinhSuaTheCanCuoc" asp-route-maTheCC="@Model.MaTheCC"
                           class="inline-flex items-center px-4 py-2 bg-yellow-50 text-yellow-700 border border-yellow-200 rounded-lg hover:bg-yellow-100 transition">
                            <i class="fas fa-edit mr-2"></i> Chỉnh sửa thẻ
                        </a>
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <div class="mb-2 text-gray-600 font-medium">Số thẻ CCCD:</div>
                        <div class="text-xl font-bold text-gray-900">@Model.MaTheCC</div>
                    </div>
                </div>
            }
            else
            {
                <div class="flex flex-col items-center justify-center py-8">
                    <div class="flex items-center justify-center w-16 h-16 rounded-full bg-blue-100 mb-3">
                        <i class="fas fa-id-card text-blue-500 text-2xl"></i>
                    </div>
                    <div class="text-gray-700 mb-2">Công dân này chưa có thông tin thẻ căn cước công dân.</div>
