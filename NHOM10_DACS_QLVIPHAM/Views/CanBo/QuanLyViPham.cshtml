@model IEnumerable<NHOM10_DACS_QLVIPHAM.Models.ViPham>

@{
    ViewData["Title"] = "Quản lý vi phạm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row justify-between items-center mb-6">
        <div class="mb-4 md:mb-0">
            <h2 class="text-2xl font-bold text-gray-800">Quản lý vi phạm</h2>
        </div>
        <div>
            <a href="@Url.Action("ThemViPham", "CanBo")" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                <i class="fas fa-plus mr-2"></i> Thêm vi phạm mới
            </a>
        </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="bg-blue-600 px-6 py-4">
            <h4 class="text-lg font-medium text-white">Danh sách vi phạm</h4>
        </div>
        <div class="p-6">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã vi phạm</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên vi phạm</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Loại vi phạm</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@item.MaViPham</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@item.TenViPham</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@item.LoaiViPham?.TenLoaiVPham</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <a href="@Url.Action("SuaViPham", "CanBo", new { id = item.MaViPham })" class="text-blue-600 hover:text-blue-900 bg-blue-100 px-3 py-1 rounded-md inline-flex items-center">
                                        <i class="fas fa-edit mr-1"></i> Sửa
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="px-6 py-10 text-center">
                                    <i class="fas fa-folder-open text-gray-400 text-4xl mb-3"></i>
                                    <p class="text-gray-500">Không có dữ liệu vi phạm nào.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 