@model NHOM10_DACS_QLVIPHAM.ViewModels.ThemLoaiViPhamViewModel

@{
    ViewData["Title"] = "Thêm loại vi phạm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 py-8">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden border border-gray-200">
        <div class="bg-gradient-to-r from-yellow-500 to-yellow-700 px-6 py-4">
            <h2 class="text-xl font-bold text-white flex items-center">
                <i class="fas fa-tags mr-2"></i> Thêm loại vi phạm mới
            </h2>
            <p class="text-yellow-100 text-sm mt-1">Tạo mới loại vi phạm và quy định mức phạt</p>
        </div>
        
        <div class="p-6">
            <form asp-action="ThemLoaiViPham" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4 p-3 bg-red-50 rounded-md"></div>
                
                <div class="mb-6">
                    <label asp-for="TenLoaiVPham" class="block text-sm font-medium text-gray-700 mb-1">Tên loại vi phạm</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-tag text-gray-400"></i>
                        </div>
                        <input asp-for="TenLoaiVPham" class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500" placeholder="Nhập tên loại vi phạm" />
                    </div>
                    <span asp-validation-for="TenLoaiVPham" class="text-sm text-red-500 mt-1 block"></span>
                </div>
                
                <div class="mb-6">
                    <label asp-for="MoTa" class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
                    <div class="relative">
                        <div class="absolute top-3 left-3 flex items-start pointer-events-none">
                            <i class="fas fa-align-left text-gray-400"></i>
                        </div>
                        <textarea asp-for="MoTa" class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500" rows="3" placeholder="Mô tả chi tiết về loại vi phạm"></textarea>
                    </div>
                    <span asp-validation-for="MoTa" class="text-sm text-red-500 mt-1 block"></span>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label asp-for="MucPhatToiThieu" class="block text-sm font-medium text-gray-700 mb-1">Mức phạt tối thiểu (VNĐ)</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-money-bill-wave text-gray-400"></i>
                            </div>
                            <input asp-for="MucPhatToiThieu" type="number" min="0" step="1000" class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500" placeholder="Nhập mức phạt tối thiểu" />
                        </div>
                        <span asp-validation-for="MucPhatToiThieu" class="text-sm text-red-500 mt-1 block"></span>
                    </div>
                    <div>
                        <label asp-for="MucPhatToiDa" class="block text-sm font-medium text-gray-700 mb-1">Mức phạt tối đa (VNĐ)</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-money-bill-wave text-gray-400"></i>
                            </div>
                            <input asp-for="MucPhatToiDa" type="number" min="0" step="1000" class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500" placeholder="Nhập mức phạt tối đa" />
                        </div>
                        <span asp-validation-for="MucPhatToiDa" class="text-sm text-red-500 mt-1 block"></span>
                    </div>
                </div>
                
                <div class="flex flex-col sm:flex-row items-center justify-between space-y-3 sm:space-y-0 sm:space-x-4 mt-8">
                    <a href="@Url.Action("QuanLyLuatViPham", "CanBo")" class="flex items-center px-4 py-2 bg-gray-100 border border-gray-300 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>
                        <span>Quay lại danh sách</span>
                    </a>
                    <button type="submit" class="w-full sm:w-auto flex justify-center items-center px-6 py-2 bg-yellow-600 text-white rounded-md hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2 transition-colors">
                        <i class="fas fa-save mr-2"></i>
                        <span>Lưu loại vi phạm</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <h3 class="text-sm font-medium text-yellow-800 flex items-center">
            <i class="fas fa-info-circle mr-2"></i> Hướng dẫn
        </h3>
        <ul class="mt-2 text-sm text-yellow-700 list-disc list-inside space-y-1">
            <li>Mỗi loại vi phạm cần có định nghĩa rõ ràng về hành vi vi phạm.</li>
            <li>Mức phạt tối thiểu không được lớn hơn mức phạt tối đa.</li>
            <li>Mức phạt cần tuân thủ theo quy định của luật hiện hành.</li>
            <li>Mô tả nên bao gồm căn cứ pháp lý và điều luật liên quan.</li>
        </ul>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 