@model NHOM10_DACS_QLVIPHAM.Models.CanBo
@{
    ViewData["Title"] = "Cập nhật thông tin cán bộ";
    Layout = "_CanBoLayout";
}
<div class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-8 mt-8">
        <div class="flex items-center justify-between mb-8">
            <div class="flex items-center space-x-3">
                <div class="bg-blue-100 p-3 rounded-full">
                    <i class="fas fa-user-cog text-blue-600 text-2xl"></i>
                </div>
                <h2 class="text-2xl font-bold text-gray-800">Cập nhật thông tin cá nhân</h2>
            </div>
            <a href="@Url.Action("Dashboard")" class="text-blue-600 hover:underline">Quay lại</a>
        </div>
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline">@TempData["Success"]</span>
            </div>
        }
        <form asp-action="CapNhatThongTinCanBo" method="post" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="MaCanBo" class="block text-sm font-medium text-gray-700 mb-1">Mã cán bộ</label>
                    <input asp-for="MaCanBo" class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50" readonly />
                </div>
                <div>
                    <label asp-for="TenCanBo" class="block text-sm font-medium text-gray-700 mb-1">Họ và tên</label>
                    <input asp-for="TenCanBo" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="TenCanBo" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label asp-for="ChucVu" class="block text-sm font-medium text-gray-700 mb-1">Chức vụ</label>
                    <input asp-for="ChucVu" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="ChucVu" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label asp-for="MaPhongBan" class="block text-sm font-medium text-gray-700 mb-1">Phòng ban</label>
                    <select asp-for="MaPhongBan" asp-items="ViewBag.PhongBans"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></select>
                    <span asp-validation-for="MaPhongBan" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label asp-for="SoDienThoai" class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                    <input asp-for="SoDienThoai" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="SoDienThoai" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label asp-for="GioiTinh" class="block text-sm font-medium text-gray-700 mb-1">Giới tính</label>
                    <select asp-for="GioiTinh" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">Chọn giới tính</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                    <span asp-validation-for="GioiTinh" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label asp-for="NgaySinh" class="block text-sm font-medium text-gray-700 mb-1">Ngày sinh</label>
                    <input asp-for="NgaySinh" type="date" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="NgaySinh" class="text-red-500 text-sm"></span>
                </div>
                <div class="md:col-span-2">
                    <label asp-for="DiaChi" class="block text-sm font-medium text-gray-700 mb-1">Địa chỉ</label>
                    <input asp-for="DiaChi" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="DiaChi" class="text-red-500 text-sm"></span>
                </div>
            </div>
            <div class="flex justify-end space-x-4 mt-6">
                <a href="@Url.Action("Dashboard")" class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Hủy
                </a>
                <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 