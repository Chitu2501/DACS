@model NHOM10_DACS_QLVIPHAM.Models.YeuCauCapLaiThe

@{
    ViewData["Title"] = "Xem Yêu Cầu Cấp Lại Thẻ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="bg-gradient-to-r from-blue-500 to-blue-700 px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <i class="fas fa-id-card text-white text-2xl mr-3"></i>
                    <h1 class="text-xl font-bold text-white">Chi Tiết Yêu Cầu Cấp Lại Thẻ</h1>
                </div>
                <div>
                    <a href="@Url.Action("QuanLyYeuCauCapLaiThe", "CanBo")" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-blue-700 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Quay Lại
                    </a>
                </div>
            </div>
        </div>

        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-gray-50 p-4 rounded-lg">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Thông Tin Yêu Cầu</h2>
                    <dl class="space-y-3">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Mã Yêu Cầu</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.MaYeuCauCapLai</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Ngày Yêu Cầu</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.NgayYeuCau.ToString("dd/MM/yyyy HH:mm")</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Lý Do</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.LyDo</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Trạng Thái</dt>
                            <dd class="mt-1">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                    @(Model.TrangThai == "Chờ xét duyệt" ? "bg-yellow-100 text-yellow-800" : 
                                      Model.TrangThai == "Đã duyệt" ? "bg-green-100 text-green-800" : 
                                      "bg-red-100 text-red-800")">
                                    @Model.TrangThai
                                </span>
                            </dd>
                        </div>
                    </dl>
                </div>

                <div class="bg-gray-50 p-4 rounded-lg">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Thông Tin Công Dân</h2>
                    <dl class="space-y-3">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Mã Công Dân</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.MaCongDan</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Tên Công Dân</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.CongDan?.TenCongDan</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Mã Thẻ Căn Cước</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.MaTheCC</dd>
                        </div>
                    </dl>
                </div>
            </div>

            @if (Model.TrangThai == "Chờ xét duyệt")
            {
                <div class="mt-6 flex justify-end space-x-3">
                    <a href="@Url.Action("XetDuyetYeuCauCapLaiThe", "CanBo", new { id = Model.MaYeuCauCapLai })" 
                       class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <i class="fas fa-check mr-2"></i>
                        Xét Duyệt Yêu Cầu
                    </a>
                </div>
            }
        </div>
    </div>
</div> 