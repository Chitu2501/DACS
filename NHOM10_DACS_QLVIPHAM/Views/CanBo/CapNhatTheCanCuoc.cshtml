@model NHOM10_DACS_QLVIPHAM.ViewModels.CapNhatTheCanCuocCanBoViewModel
@{
    ViewData["Title"] = "Cập nhật thẻ căn cước";
    var congDan = ViewBag.CongDan as NHOM10_DACS_QLVIPHAM.Models.CongDan;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">
                            @(string.IsNullOrEmpty(congDan?.MaTheCC) ? "Cấp thẻ căn cước mới" : "Cập nhật thẻ căn cước")
                        </h6>
                    </div>
                </div>
                <div class="card-body p-4">
                    <h5 class="mb-3">Thông tin công dân</h5>
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <p><strong>Họ và tên:</strong> @congDan?.TenCongDan</p>
                            <p><strong>Địa chỉ:</strong> @congDan?.DiaChi</p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Ngày sinh:</strong> @congDan?.NgaySinh.ToString("dd/MM/yyyy")</p>
                            <p><strong>Giới tính:</strong> @congDan?.GioiTinh</p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Số điện thoại:</strong> @congDan?.SDT</p>
                            <p><strong>Email:</strong> @congDan?.GMAIL</p>
                        </div>
                    </div>
                    
                    <form asp-action="CapNhatTheCanCuoc" asp-route-maCongDan="@congDan?.MaCongDan" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <h5 class="mb-3">Thông tin thẻ căn cước</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="input-group input-group-outline my-3">
                                    <label asp-for="MaTheCC" class="form-label"></label>
                                    <input asp-for="MaTheCC" class="form-control" />
                                </div>
                                <span asp-validation-for="MaTheCC" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="input-group input-group-outline my-3">
                                    <label asp-for="TenCC" class="form-label"></label>
                                    <input asp-for="TenCC" class="form-control" />
                                </div>
                                <span asp-validation-for="TenCC" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="input-group input-group-static mb-4">
                                    <label asp-for="NgayCap" class="ms-0"></label>
                                    <input asp-for="NgayCap" class="form-control" type="date" />
                                </div>
                                <span asp-validation-for="NgayCap" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="input-group input-group-static mb-4">
                                    <label asp-for="NgayHetHan" class="ms-0"></label>
                                    <input asp-for="NgayHetHan" class="form-control" type="date" />
                                </div>
                                <span asp-validation-for="NgayHetHan" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="input-group input-group-outline my-3">
                                    <label asp-for="NoiCap" class="form-label"></label>
                                    <input asp-for="NoiCap" class="form-control" />
                                </div>
                                <span asp-validation-for="NoiCap" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="input-group input-group-outline my-3">
                                    <label asp-for="QuocTich" class="form-label"></label>
                                    <input asp-for="QuocTich" class="form-control" />
                                </div>
                                <span asp-validation-for="QuocTich" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="input-group input-group-outline my-3">
                                    <label asp-for="TrangThai" class="form-label"></label>
                                    <select asp-for="TrangThai" class="form-control">
                                        <option value="Đang sử dụng">Đang sử dụng</option>
                                        <option value="Đã hết hạn">Đã hết hạn</option>
                                        <option value="Đã thu hồi">Đã thu hồi</option>
                                        <option value="Bị mất">Bị mất</option>
                                    </select>
                                </div>
                                <span asp-validation-for="TrangThai" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="input-group input-group-outline my-3">
                                    <label asp-for="GhiChu" class="form-label"></label>
                                    <input asp-for="GhiChu" class="form-control" />
                                </div>
                                <span asp-validation-for="GhiChu" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <h5 class="mb-3 mt-4">Ảnh thẻ căn cước</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label asp-for="AnhMatTruoc" class="form-label"></label>
                                    <input asp-for="AnhMatTruoc" type="file" class="form-control border" accept="image/*" />
                                </div>
                                <span asp-validation-for="AnhMatTruoc" class="text-danger"></span>
                                
                                @if (!string.IsNullOrEmpty(Model.AnhMatTruocHienTai))
                                {
                                    <div class="mt-3">
                                        <p>Ảnh mặt trước hiện tại:</p>
                                        <img src="@Model.AnhMatTruocHienTai" alt="Ảnh mặt trước thẻ" class="img-fluid" style="max-height: 200px;" />
                                    </div>
                                }
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label asp-for="AnhMatSau" class="form-label"></label>
                                    <input asp-for="AnhMatSau" type="file" class="form-control border" accept="image/*" />
                                </div>
                                <span asp-validation-for="AnhMatSau" class="text-danger"></span>
                                
                                @if (!string.IsNullOrEmpty(Model.AnhMatSauHienTai))
                                {
                                    <div class="mt-3">
                                        <p>Ảnh mặt sau hiện tại:</p>
                                        <img src="@Model.AnhMatSauHienTai" alt="Ảnh mặt sau thẻ" class="img-fluid" style="max-height: 200px;" />
                                    </div>
                                }
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="material-icons">save</i> Lưu thông tin
                                </button>
                                <a asp-action="ChiTietCongDan" asp-route-id="@congDan?.MaCongDan" class="btn btn-secondary">
                                    <i class="material-icons">arrow_back</i> Quay lại
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Initialize Material Dashboard inputs
            if ($('.input-group.input-group-outline').length) {
                $('.input-group.input-group-outline').each(function() {
                    var input = $(this).find('input');
                    if (input.val() !== "") {
                        $(this).addClass('is-filled');
                    }
                    
                    input.on('focus', function() {
                        $(this).parent().addClass('focused is-focused');
                    });
                    
                    input.on('blur', function() {
                        $(this).parent().removeClass('focused is-focused');
                        if ($(this).val() !== "") {
                            $(this).parent().addClass('is-filled');
                        } else {
                            $(this).parent().removeClass('is-filled');
                        }
                    });
                    
                    // Trigger blur on page load to set initial state
                    input.trigger('blur');
                });
            }
        });
    </script>
} 