@model IEnumerable<NHOM10_DACS_QLVIPHAM.Models.YeuCauCapNhatThongTin>

@{
    ViewData["Title"] = "Quản lý yêu cầu thay đổi thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
    <!-- Page Header -->
    <div class="bg-white shadow-md rounded-lg overflow-hidden mb-8">
        <div class="bg-gradient-to-r from-purple-600 to-indigo-800 px-6 py-5">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="flex items-center">
                    <i class="fas fa-users-cog text-white text-2xl mr-3"></i>
                    <h1 class="text-xl font-bold text-white">Quản lý yêu cầu thay đổi thông tin</h1>
                </div>
                <div class="mt-4 md:mt-0">
                    <a href="@Url.Action("Dashboard", "CanBo")" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-500 hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-400">
                        <i class="fas fa-home mr-2"></i>
                        Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5 mb-8">
        <!-- Tổng số yêu cầu -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden h-full">
            <div class="p-5 flex items-center">
                <div class="p-3 rounded-full bg-purple-100 mr-4">
                    <i class="fas fa-clipboard-list text-purple-600 text-xl"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500">Tổng số yêu cầu</p>
                    <p class="text-2xl font-bold text-gray-900">@ViewBag.TongYeuCau</p>
                </div>
            </div>
        </div>

        <!-- Yêu cầu mới -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden h-full">
            <div class="p-5 flex items-center">
                <div class="p-3 rounded-full bg-yellow-100 mr-4">
                    <i class="fas fa-clock text-yellow-600 text-xl"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500">Chờ xử lý</p>
                    <p class="text-2xl font-bold text-gray-900">@ViewBag.YeuCauChoXuLy</p>
                </div>
            </div>
        </div>

        <!-- Đã duyệt -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden h-full">
            <div class="p-5 flex items-center">
                <div class="p-3 rounded-full bg-green-100 mr-4">
                    <i class="fas fa-check-circle text-green-600 text-xl"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500">Đã duyệt</p>
                    <p class="text-2xl font-bold text-gray-900">@ViewBag.YeuCauDaDuyet</p>
                </div>
            </div>
        </div>

        <!-- Đã từ chối -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden h-full">
            <div class="p-5 flex items-center">
                <div class="p-3 rounded-full bg-red-100 mr-4">
                    <i class="fas fa-times-circle text-red-600 text-xl"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500">Đã từ chối</p>
                    <p class="text-2xl font-bold text-gray-900">@ViewBag.YeuCauTuChoi</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Feature Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-5 mb-8">
        <!-- Dashboard Card -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300 flex flex-col h-full">
            <div class="p-6 flex flex-col flex-grow">
                <div class="flex items-center mb-4">
                    <div class="p-3 rounded-full bg-indigo-100 mr-4">
                        <i class="fas fa-th-large text-indigo-600 text-xl"></i>
                    </div>
                    <h2 class="text-lg font-semibold text-gray-900">Dashboard</h2>
                </div>
                <p class="text-gray-600 mb-6 flex-grow">Quản lý và xử lý tất cả yêu cầu thay đổi thông tin với giao diện trực quan.</p>
                <a href="@Url.Action("YeuCauCapNhatThongTinDashboard", "CanBo")" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 w-full justify-center">
                    <i class="fas fa-tachometer-alt mr-2"></i>
                    Đến Dashboard
                </a>
            </div>
        </div>

        <!-- Statistics Card -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300 flex flex-col h-full">
            <div class="p-6 flex flex-col flex-grow">
                <div class="flex items-center mb-4">
                    <div class="p-3 rounded-full bg-blue-100 mr-4">
                        <i class="fas fa-chart-pie text-blue-600 text-xl"></i>
                    </div>
                    <h2 class="text-lg font-semibold text-gray-900">Báo cáo thống kê</h2>
                </div>
                <p class="text-gray-600 mb-6 flex-grow">Xem báo cáo chi tiết và biểu đồ phân tích về yêu cầu thay đổi thông tin.</p>
                <a href="@Url.Action("BaoCaoYeuCauCapNhatThongTin", "CanBo")" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 w-full justify-center">
                    <i class="fas fa-chart-bar mr-2"></i>
                    Xem báo cáo
                </a>
            </div>
        </div>

        <!-- Request Processing Card -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300 flex flex-col h-full">
            <div class="p-6 flex flex-col flex-grow">
                <div class="flex items-center mb-4">
                    <div class="p-3 rounded-full bg-green-100 mr-4">
                        <i class="fas fa-tasks text-green-600 text-xl"></i>
                    </div>
                    <h2 class="text-lg font-semibold text-gray-900">Xử lý yêu cầu</h2>
                </div>
                <p class="text-gray-600 mb-6 flex-grow">Xét duyệt các yêu cầu đang chờ xử lý nhanh chóng và hiệu quả.</p>
                <a href="@Url.Action("QuanLyYeuCauCapNhatThongTin", "CanBo")" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 w-full justify-center">
                    <i class="fas fa-check-double mr-2"></i>
                    Xét duyệt yêu cầu
                </a>
            </div>
        </div>
    </div>

    <!-- Latest Requests and Activities Section -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-5 mb-8">
        <!-- Latest Requests Section - Takes 2/3 of width on large screens -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden lg:col-span-2">
            <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                <h2 class="text-lg font-medium text-gray-900">Yêu cầu mới nhất</h2>
                <a href="@Url.Action("YeuCauCapNhatThongTinDashboard", "CanBo")" class="text-indigo-600 hover:text-indigo-900 text-sm font-medium">
                    Xem tất cả <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Mã yêu cầu
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Người yêu cầu
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Ngày yêu cầu
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Trạng thái
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Thao tác
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var item in Model.Take(5))
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    #@item.MaYeuCau
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @(item.User?.HoTen ?? item.CongDan?.TenCongDan ?? "Không có tên")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @item.NgayYeuCau.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (item.TrangThai == "Chờ xét duyệt")
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                            @item.TrangThai
                                        </span>
                                    }
                                    else if (item.TrangThai == "Đã duyệt")
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                            @item.TrangThai
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                            @item.TrangThai
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex items-center justify-end space-x-3">
                                        <a href="@Url.Action("XemYeuCauCapNhatThongTin", "CanBo", new { id = item.MaYeuCau })" class="text-blue-600 hover:text-blue-900" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (item.TrangThai == "Chờ xét duyệt")
                                        {
                                            <a href="@Url.Action("XetDuyetCapNhatThongTin", "CanBo", new { id = item.MaYeuCau })" class="text-indigo-600 hover:text-indigo-900" title="Xét duyệt">
                                                <i class="fas fa-check-circle"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.Any())
            {
                <div class="text-center py-10">
                    <i class="fas fa-clipboard-check text-indigo-400 text-4xl mb-3"></i>
                    <p class="text-gray-500">Không có yêu cầu thay đổi thông tin nào</p>
                </div>
            }
        </div>

        <!-- Processing Stats - Takes 1/3 of width on large screens -->
        <div class="bg-white shadow-md rounded-lg overflow-hidden h-full">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-medium text-gray-900">Thống kê xử lý</h2>
            </div>
            <div class="p-6">
                <div class="space-y-6">
                    <!-- Approval Rate -->
                    <div>
                        <div class="flex justify-between items-center mb-2">
                            <span class="text-sm font-medium text-gray-700">Tỷ lệ duyệt</span>
                            <span class="text-sm font-medium text-green-600">@ViewBag.TyLeDuyet%</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2.5">
                            <div class="bg-green-600 h-2.5 rounded-full" style="width: @ViewBag.TyLeDuyet%"></div>
                        </div>
                    </div>
                    
                    <!-- Rejection Rate -->
                    <div>
                        <div class="flex justify-between items-center mb-2">
                            <span class="text-sm font-medium text-gray-700">Tỷ lệ từ chối</span>
                            <span class="text-sm font-medium text-red-600">@ViewBag.TyLeTuChoi%</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2.5">
                            <div class="bg-red-600 h-2.5 rounded-full" style="width: @ViewBag.TyLeTuChoi%"></div>
                        </div>
                    </div>
                    
                    <!-- Processing Time -->
                    <div>
                        <div class="flex justify-between items-center mb-2">
                            <span class="text-sm font-medium text-gray-700">Thời gian xử lý trung bình</span>
                            <span class="text-sm font-medium text-indigo-600">@ViewBag.ThoiGianXuLy giờ</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2.5">
                            <div class="bg-indigo-600 h-2.5 rounded-full" style="width: 70%"></div>
                        </div>
                    </div>

                    <!-- Quick Search -->
                    <div class="pt-4 border-t border-gray-200">
                        <h3 class="text-md font-medium text-gray-900 mb-3">Tìm kiếm nhanh</h3>
                        <div class="mb-4">
                            <label for="searchType" class="block text-sm font-medium text-gray-700 mb-1">Tìm kiếm theo</label>
                            <select id="searchType" class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50">
                                <option value="name">Tên người dùng</option>
                                <option value="id">Mã yêu cầu</option>
                                <option value="content">Nội dung</option>
                            </select>
                        </div>
                        <div class="mb-4 relative">
                            <label for="quickSearch" class="block text-sm font-medium text-gray-700 mb-1">Từ khóa</label>
                            <div class="relative">
                                <input type="text" id="quickSearch" class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50 pr-10" placeholder="Nhập từ khóa tìm kiếm...">
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                    <i class="fas fa-search text-gray-400"></i>
                                </div>
                            </div>
                        </div>
                        <button id="btnSearch" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <i class="fas fa-search mr-2"></i>
                            Tìm kiếm
                        </button>
                    </div>
                </div>
                
                <div class="mt-6">
                    <a href="@Url.Action("BaoCaoYeuCauCapNhatThongTin", "CanBo")" class="inline-flex items-center text-indigo-600 hover:text-indigo-900">
                        <span>Xem báo cáo chi tiết</span>
                        <i class="fas fa-arrow-right ml-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Quick search functionality
            document.getElementById('btnSearch').addEventListener('click', function() {
                const searchType = document.getElementById('searchType').value;
                const searchText = document.getElementById('quickSearch').value.trim();
                
                if (searchText) {
                    // Redirect to dashboard with search parameters
                    window.location.href = `@Url.Action("YeuCauCapNhatThongTinDashboard", "CanBo")?searchType=${searchType}&searchText=${encodeURIComponent(searchText)}`;
                } else {
                    alert('Vui lòng nhập từ khóa tìm kiếm');
                }
            });
            
            // Press Enter to search
            document.getElementById('quickSearch').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    document.getElementById('btnSearch').click();
                }
            });
        });
    </script>
} 