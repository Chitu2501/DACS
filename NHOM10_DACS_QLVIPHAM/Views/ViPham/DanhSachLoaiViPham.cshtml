@model IEnumerable<NHOM10_DACS_QLVIPHAM.Models.LoaiViPham>

@{
    ViewData["Title"] = "Danh sách loại vi phạm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Page Header -->
    <div class="bg-white shadow-md rounded-lg overflow-hidden mb-6">
        <div class="bg-gradient-to-r from-blue-500 to-blue-700 px-6 py-4">
            <div class="flex items-center">
                <i class="fas fa-exclamation-triangle text-white text-2xl mr-3"></i>
                <h1 class="text-xl font-bold text-white">Danh sách loại vi phạm</h1>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Mã loại
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Tên loại vi phạm
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Mô tả
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Cơ quan quản lý
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Mức phạt tối thiểu
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Mức phạt tối đa
                        </th>
                        <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Chi tiết
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                @item.MaLoaiVPham
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @item.TenLoaiVPham
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500 max-w-xs truncate">
                                @item.MoTa
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                @item.CoquanQuanLy
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                @item.MucPhatToiThieu.ToString("N0") VNĐ
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                @item.MucPhatToiDa.ToString("N0") VNĐ
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-center">
                                <a href="@Url.Action("ChiTietLoaiViPham", "ViPham", new { id = item.MaLoaiVPham })" class="text-blue-600 hover:text-blue-900">
                                    <i class="fas fa-info-circle mr-1"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Additional Information -->
    <div class="mt-8">
        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-md">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-info-circle text-blue-500"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-blue-700">
                        Loại vi phạm được phân loại theo hành vi vi phạm, mức phạt và cơ quan quản lý. 
                        Nhấn vào nút "Chi tiết" để xem thêm thông tin về các vi phạm thuộc loại đó.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div> 