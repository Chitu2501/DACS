@model NHOM10_DACS_QLVIPHAM.ViewModels.KhieuNaiViPhamViewModel
@{
    ViewData["Title"] = "Khiếu nại vi phạm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="mb-6">
        <a href="javascript:history.back()" class="inline-flex items-center text-gray-700 hover:text-blue-600">
            <i class="fas fa-arrow-left mr-2"></i> Quay lại
        </a>
    </div>
    
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="bg-blue-600 px-6 py-4">
            <h2 class="text-xl font-bold text-white">Gửi khiếu nại vi phạm</h2>
        </div>
        <div class="p-6">
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-triangle text-yellow-400"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-yellow-700">
                            Vui lòng cung cấp đầy đủ thông tin và lý do khiếu nại. Chúng tôi sẽ xem xét và phản hồi trong thời gian sớm nhất.
                        </p>
                    </div>
                </div>
            </div>
            
            <form asp-action="KhieuNaiViPham" method="post">
                <input type="hidden" asp-for="MaBienBan" />
                
                <div class="mb-6 bg-gray-50 p-4 rounded-lg">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Thông tin biên bản</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <p class="text-sm text-gray-500">Mã biên bản:</p>
                            <p class="font-medium">#@Model.MaBienBan</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Tên biên bản:</p>
                            <p class="font-medium">@Model.TenBienBan</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Ngày lập:</p>
                            <p class="font-medium">@Model.NgayLapBienBan.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Nội dung vi phạm:</p>
                            <p class="font-medium">@Model.NoiDungViPham</p>
                        </div>
                    </div>
                </div>
                
                <div class="mb-6">
                    <label asp-for="NoiDungKhieuNai" class="block text-sm font-medium text-gray-700 mb-2">Nội dung khiếu nại <span class="text-red-500">*</span></label>
                    <textarea asp-for="NoiDungKhieuNai" rows="6" class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" placeholder="Nhập lý do khiếu nại của bạn..."></textarea>
                    <span asp-validation-for="NoiDungKhieuNai" class="text-red-500 text-sm"></span>
                </div>
                
                <div class="flex items-center justify-end space-x-3">
                    <a href="javascript:history.back()" class="px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none">
                        Hủy bỏ
                    </a>
                    <button type="submit" class="px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
                        Gửi khiếu nại
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 