@{
    ViewData["Title"] = "Thông báo thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    string message = ViewBag.Message;
    bool isSuccess = message.Contains("thành công");
}

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-6 text-center">
            @if (isSuccess)
            {
                <div class="rounded-full bg-green-100 p-3 mx-auto w-16 h-16 flex items-center justify-center mb-4">
                    <i class="fas fa-check-circle text-green-500 text-3xl"></i>
                </div>
                <h2 class="text-2xl font-bold text-gray-800 mb-2">Thanh toán thành công!</h2>
                <p class="text-gray-600 mb-6">Biên bản vi phạm của bạn đã được thanh toán thành công.</p>
            }
            else
            {
                <div class="rounded-full bg-yellow-100 p-3 mx-auto w-16 h-16 flex items-center justify-center mb-4">
                    <i class="fas fa-exclamation-triangle text-yellow-500 text-3xl"></i>
                </div>
                <h2 class="text-2xl font-bold text-gray-800 mb-2">@(message.Contains("hủy") ? "Thanh toán đã bị hủy" : "Thanh toán thất bại")</h2>
                <p class="text-gray-600 mb-6">@message</p>
            }
            
            <div class="border-t border-gray-200 pt-6 flex justify-center space-x-4">
                <a href="@Url.Action("TraCuuViPham", "ViPham")" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors inline-flex items-center">
                    <i class="fas fa-search mr-2"></i> Tra cứu vi phạm
                </a>
                <a href="@Url.Action("Index", "Home")" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition-colors inline-flex items-center">
                    <i class="fas fa-home mr-2"></i> Trang chủ
                </a>
            </div>
        </div>
    </div>
</div> 