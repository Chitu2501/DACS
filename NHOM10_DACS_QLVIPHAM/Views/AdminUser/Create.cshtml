@model NHOM10_DACS_QLVIPHAM.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Tạo tài khoản người dùng";
    var roles = ViewBag.Roles as List<string>;
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-8 px-2">
    <div class="w-full max-w-lg">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="p-8">
                <h2 class="text-3xl font-extrabold text-gray-800 mb-8 text-center">Tạo tài khoản mới</h2>

                <form asp-action="Create" method="post" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4 text-center"></div>

                    <div>
                        <label asp-for="UserName" class="block text-gray-700 text-base font-semibold mb-1"></label>
                        <input asp-for="UserName" class="block w-full rounded-lg border border-gray-300 py-2 px-4 text-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none transition" />
                        <span asp-validation-for="UserName" class="text-red-500 text-xs italic"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-gray-700 text-base font-semibold mb-1"></label>
                        <input asp-for="Email" class="block w-full rounded-lg border border-gray-300 py-2 px-4 text-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none transition" />
                        <span asp-validation-for="Email" class="text-red-500 text-xs italic"></span>
                    </div>

                    <div>
                        <label asp-for="Password" class="block text-gray-700 text-base font-semibold mb-1"></label>
                        <input asp-for="Password" class="block w-full rounded-lg border border-gray-300 py-2 px-4 text-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none transition" />
                        <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
                    </div>

                    <div>
                        <label asp-for="Role" class="block text-gray-700 text-base font-semibold mb-1"></label>
                        <select asp-for="Role" class="block w-full rounded-lg border border-gray-300 py-2 px-4 text-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none transition">
                            <option value="CanBo">Cán bộ</option>
                        </select>
                        <span asp-validation-for="Role" class="text-red-500 text-xs italic"></span>
                    </div>

                    <div>
                        <label asp-for="MaPhongBan" class="block text-gray-700 text-base font-semibold mb-1"></label>
                        <select asp-for="MaPhongBan" asp-items="Model.PhongBans" class="block w-full rounded-lg border border-gray-300 py-2 px-4 text-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none transition">
                            <option value="">-- Chọn phòng ban --</option>
                        </select>
                        <span asp-validation-for="MaPhongBan" class="text-red-500 text-xs italic"></span>
                    </div>

                    <div class="flex items-center justify-between mt-8">
                        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow-lg transition-colors focus:outline-none focus:ring-2 focus:ring-blue-300">
                            Tạo tài khoản
                        </button>
                    </div>
                    <div class="mt-4 text-center">
                        <a asp-action="Index" class="text-blue-600 hover:text-blue-800 underline">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 