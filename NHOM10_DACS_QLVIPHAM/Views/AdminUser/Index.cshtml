@model IEnumerable<NHOM10_DACS_QLVIPHAM.Models.ApplicationUser>
@{
    ViewData["Title"] = "Danh sách người dùng";
}
<div class="min-h-screen bg-gray-50 py-8 px-2 flex flex-col items-center">
    <div class="w-full max-w-4xl">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-800">@ViewData["Title"]</h2>
            <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow transition">Tạo tài khoản mới</a>
        </div>
        <div class="bg-white rounded-2xl shadow-xl overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên đăng nhập</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var user in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@user.UserName</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@user.Email</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div> 